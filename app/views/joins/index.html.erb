<div>
  <div>
    <h1>
      List of all joins
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new join
    </h2>

    <form action="/insert_join" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="workout_id_box">
          Workout
        </label>

        <input type="text" id="workout_id_box" name="query_workout_id">
      </div>

      <button>
        Create join
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Workout
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_joins.each do |a_join| %>
      <tr>
        <td>
          <%= a_join.id %>
        </td>

        <td>
          <%= a_join.user_id %>
        </td>

        <td>
          <%= a_join.workout_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_join.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_join.updated_at) %> ago
        </td>

        <td>
          <a href="/joins/<%= a_join.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
